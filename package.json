{
  "name": "cicd-demo",
  "version": "1.0.0",
  "description": "GitHub CI/CD Demo Project",
  "scripts": {
    "start": "http-server",
    "lint:html": "html-validator --file index.html --verbose",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint": "npm run lint:html && npm run lint:css"
  },
  "devDependencies": {
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "http-server": "^14.1.1",
    "html-validator-cli": "^7.0.1"
  }
} 